{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "outDir": "dist",
    "rootDir": ".",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@config/*":  ["config/environment/*"],
      "@agent/*":   ["core/agent/*"],
      "@context/*": ["core/context/*"],      
      "@services/*":["core/services/*"]
    }
  },
  "include": ["**/*.ts"]
}
