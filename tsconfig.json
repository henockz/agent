{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "outDir": "dist",
    "rootDir": ".",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@llm/*"      : ["core/llm/*"],
      "@commands/*" : ["core/commands/*"],
      "@config/*"   : ["config/*"],
      "@agent/*"    : ["core/agent/*"],
      "@tools/*"    : ["core/tools/*"],      
      "@services/*" : ["core/services/*"],
      "@types/*"    : ["core/types/*"],
      
    }
  },
 "include": ["**/*.ts"]

}
